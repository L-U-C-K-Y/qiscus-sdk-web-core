{
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "outDir": "lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "./src"
  ]
}
